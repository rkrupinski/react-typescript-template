{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ]
}
