{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ]
}
